@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "RolesList";
}

<h1>RolesList</h1>

<a asp-action="CreateRole" class="btn btn-primary">Create Role</a>
@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header">
            <h2 class="card-title"> Role ID: @item.Id</h2>
        </div>
        <div class="card-body">
            Name:@item.Name
        </div>
        <div class="card-footer">
            <a asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
            <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
}

