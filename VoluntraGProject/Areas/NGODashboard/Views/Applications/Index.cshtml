@model IEnumerable<VoluntraGProject.Models.Application>

<h1>Applications</h1>

<style>
    /* تنسيق الجدول */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-family: Arial, sans-serif;
    }

        .table th, .table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    /* تنسيق الأزرار */
    .btn {
        border: none;
        border-radius: 5px;
        padding: 8px 15px;
        font-size: 14px;
        text-transform: capitalize;
        margin: 5px 0; /* إضافة مسافة بين الأزرار */
        text-decoration: none;
        display: block; /* تغيير عرض الأزرار لجعلها تحت بعضها */
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
        transform: scale(1.02);
        transition: all 0.2s ease-in-out;
    }
</style>


<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.VolunteerName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.skills)</th>
            <th>@Html.DisplayNameFor(model => model.Experince)</th>
            <th>@Html.DisplayNameFor(model => model.AppliedDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.VolunteerName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.skills)</td>
                <td>@Html.DisplayFor(modelItem => item.Experince)</td>
                <td>@Html.DisplayFor(modelItem => item.AppliedDate)</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.ApplicationId">Edit</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.ApplicationId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ApplicationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
